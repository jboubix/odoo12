<?xml version="1.0"?>
<odoo>
    <!-- Promesa de pago en vista Form de factura de clientes. -->
    <data>
        <record id="dnk_invoice_requirement_to_pay_form_1" model="ir.ui.view">
            <field name="name">dnk_invoice_requirement_to_pay_form_1</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dnk_payment_solution']" position="after">
                    <field name="dnk_client_requirements" widget="many2many_tags"
                        options="{'no_create_edit': True, 'no_create': True}"
                    />
                </xpath>
            </field>
        </record>
    </data>

    <data>
        <record id="dnk_invoice_requirement_to_pay_tree_1" model="ir.ui.view">
            <field name="name">dnk_invoice_requirement_to_pay_tree_1</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dnk_payment_solution']" position="after">
                    <field name="dnk_client_requirements" widget="many2many_tags"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
