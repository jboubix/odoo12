<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="dnk_view_allowed_product_categories_users_form" model="ir.ui.view">
            <field name="name">dnk.view.allowed.product.categories.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Allowed Product Categories" attrs="{'invisible': [('name', '==', 'Administrator')]}">
                        <group>
                            <field name="dnk_product_category_allowed_ids" nolabel="1" colspan="2"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
