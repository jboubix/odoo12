<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Sale price-->

    <record model="ir.ui.view" id="dnk_show_sale_price_form_product_template">
        <field name="name">dnk_show_sale_price_form_product_template</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </xpath>
            <xpath expr="//field[@name='dnk_price_currency_id']" position="attributes">
                <attribute name="groups">dnk_product_hide_cost.dnk_show_sale_price</attribute>
            </xpath>
        </field>
    </record>

