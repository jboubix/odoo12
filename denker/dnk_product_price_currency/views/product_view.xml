<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>

            <field name="arch" type="xml">
                <field name="list_price" position="replace">
                    <field name="list_price" widget='monetary' options="{'currency_field': 'dnk_price_currency_id'}"/>
                    <field class="oe_edit_only" name="dnk_price_currency_id"/>
                </field>
            </field>
        </record>

        <record id="dnk_product_template_tree_view" model="ir.ui.view">
            <field name="name">dnk.product.template.tree.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>

            <field name="arch" type="xml">
                <field name="list_price" position="replace">
                    <field name="list_price" widget='monetary' options="{'currency_field': 'dnk_price_currency_id'}"/>
                    <field name="dnk_price_currency_id" invisible="1"/>
                </field>

                <field name="standard_price" position="replace">
                    <field name="standard_price" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    <field name="currency_id" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="dnk_product_product_tree_view" model="ir.ui.view">
            <field name="name">dnk.product.product.tree.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>

            <field name="arch" type="xml">
                <field name="lst_price" position="replace">
                    <field name="lst_price" widget='monetary' options="{'currency_field': 'dnk_price_currency_id'}"/>
                    <field name="dnk_price_currency_id" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="product_template_kanban_view" model="ir.ui.view">
            <field name="name">product.template.product.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="dnk_price_currency_id"/>
                </field>
                <xpath expr="//templates//field[@name='lst_price']" position="replace">
                    <field name="lst_price" widget='monetary' options="{'currency_field': 'dnk_price_currency_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="product_variant_easy_edit_view" model="ir.ui.view">
            <field name="name">product.product.view.form.easy</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lst_price']" position="replace">
                    <field name="lst_price" widget='monetary' options="{'currency_field': 'dnk_price_currency_id'}"
                            attrs="{'readonly': [('product_variant_count', '&gt;', 1)]}"/>
                    <field name="dnk_price_currency_id" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
