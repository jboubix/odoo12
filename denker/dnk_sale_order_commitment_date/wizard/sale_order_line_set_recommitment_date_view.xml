<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- This wizard view use for label formating like height,width,number of copy etc... -->
        <record id="view_sale_order_line_set_recommitment_date_wizard" model="ir.ui.view">
            <field name="name">view.sale.order.line.set.recommitment.date.wizard</field>
            <field name="model">sale.order.line.set.recommitment.date.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Commitment Date changed">
                    <group colspan="4">
                      <div class="oe_title">
                          <p>If the commitment date is changed. The customer is going to be <b>notified automatically</b> at saving.</p>
                      </div>
                    </group>
                    <group colspan="4" col="4">
                      <field name="dnk_recommitment_date"/>
                    </group>
                    <group colspan="4">
                      <div class="oe_title">
                          <p><b>Warning:</b> An email is going to be sent to the customer, notifying him of the change of commitment date.</p>
                      </div>
                    </group>
                    <separator colspan="4"/>
                    <footer>
                        <button name="set_recommitment_date" string="Save" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancelar" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_set_recommitment_date_wizard" model="ir.actions.act_window">
            <field name="name">Set Recommitment Date</field>
            <field name="res_model">sale.order.line.set.recommitment.date.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_line_set_recommitment_date_wizard"/>
            <field name="target">new</field>
        </record>

        <record id="dnk_view_sale_line_set_recommitment_date_form" model="ir.ui.view">
            <field name="name">dnk.view.sale.line.set.recommitment.date.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="before">
                    <!--<button name="open_view_wizard" icon="fa-archive"
                            String="Update" type="object"/>-->
                            <!--attrs="{'invisible':[('status',' not in in ',('sale', 'done'))]}"
                                attrs="{'invisible': [('state', '!=', 'done')]}"-->
                    <button name="%(action_set_recommitment_date_wizard)d"
                            icon="fa-calendar" type="action"
                            attrs="{'invisible': [('state', '!=', 'done')]}"
                            class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
