<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dnk_sale_dnk_pricelist_level_form_view" model="ir.ui.view">
       <field name="name">dnk.sale.pricelist.level.form.view</field>
       <field name="model">product.pricelist</field>
       <field name="inherit_id" ref="product.product_pricelist_view" />
       <field name="arch" type="xml">
         <xpath expr="//field[@name='discount_policy']" position="before">
             <field name="dnk_pricelist_level"/>
         </xpath>
       </field>
     </record>

     <record id="dnk_sale_dnk_pricelist_level_tree_view" model="ir.ui.view">
        <field name="name">dnk.sale.pricelist.level.tree.view</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_tree" />
        <field name="arch" type="xml">
          <xpath expr="//field[@name='discount_policy']" position="before">
              <field name="dnk_pricelist_level"/>
          </xpath>
        </field>
      </record>
</odoo>
