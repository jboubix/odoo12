<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
			<record id="dnk_product_pricelist_form_view" model="ir.ui.view">
				 <field name="name">dnk.product.pricelist.form.view</field>
				 <field name="model">product.pricelist</field>
				 <field name="inherit_id" ref="product.product_pricelist_view"/>
				 <field name="arch" type="xml">
						<xpath expr="//field[@name='discount_policy']" position="before">
								<field name="dnk_pricelist_level"/>
						</xpath>
				 </field>
			</record>

			<record id="dnk_product_pricelist_tree_view" model="ir.ui.view">
				 <field name="name">dnk.product.pricelist.tree.view</field>
				 <field name="model">product.pricelist</field>
				 <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
				 <field name="arch" type="xml">
						<xpath expr="//field[@name='discount_policy']" position="before">
								<field name="dnk_pricelist_level"/>
						</xpath>
				 </field>
			</record>
	</data>
</odoo>
