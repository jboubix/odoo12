<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dnk_sale_profit_margin_color_form_view_1" model="ir.ui.view">
		<field name="name">dnk_sale_profit_margin_color_form_view_1</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before" >
          <field name="dnk_profit_margin_color" invisible="1" readonly="1"/>
          <field name="dnk_profit_margin_html"  widget = "html" invisible="0" readonly="1"/>
			</xpath>
      <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="after" >
          <field name="dnk_profit_margin_color" invisible="0" readonly="1" />
            <field name="dnk_profit_margin_html" widget = "html" invisible="1" readonly="1"/>
      </xpath>
    </field>
	</record>
</odoo>
